<h1>Course <%= @courses.name %></h1>

Name: <%= @courses.name %><br/>
Description: <%= @courses.description %><br/>

<% @courses.course_instances.each do |course| %>
	<%= link_to course.name, course_course_instances_path(@courses) + "/" + course.id.to_s %><br/>
<% end %>

<p>Exams:</p>

<% @courses.exams.each do |exam| %>
	<%= link_to @courses.name, exam_path(@courses) %><br/>
<% end %>

